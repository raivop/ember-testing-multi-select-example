<section class="cards">
  <div>
    <div class="cards">
      <div class="details">
        <span class="card_title">
          <h4>Details</h4>
          <hr />
          <div class="form-group">
            <label for="name">Full Name</label>
            {{input id="name" class="form-control detail-name" value=model.name placeholder="name"}}
            {{#validation-error-field submitted=submitted field="name" className="name-validation-error" model=model validation=nameValidation}}invalid name{{/validation-error-field}}
          </div>
          <div class="form-group">
            {{select-roles roles=roles user=model}}
          </div>
          <div class="form-group">
            <button class="save-btn btn btn-primary" {{action "save"}}>Save</button>
          </div>
        </span>
      </div>
    </div>
  </div>
</section>
